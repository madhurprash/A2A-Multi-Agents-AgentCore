# AWS OpenTelemetry Configuration for Monitoring Agent
# Based on AWS Bedrock AgentCore Strands observability reference

# Enable observability
ENABLE_OBSERVABILITY=true
AGENT_OBSERVABILITY_ENABLED=true

# AWS OpenTelemetry Distribution Configuration
OTEL_PYTHON_DISTRO=aws_distro
OTEL_PYTHON_CONFIGURATOR=aws_configurator
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf

# CloudWatch Integration
# Replace YOUR-LOG-GROUP and YOUR-LOG-STREAM with actual values
OTEL_EXPORTER_OTLP_LOGS_HEADERS=x-aws-log-group=/aws/bedrock-new-test,x-aws-log-stream=monitoring-agent-stream,x-aws-metric-namespace=MonitoringAgent

# Service identification
OTEL_RESOURCE_ATTRIBUTES=service.name=monitoring-agent

# AWS Region
AWS_REGION=us-west-2

# Optional: Enable traces export (default is auto-detected)
OTEL_TRACES_EXPORTER=otlp

# Debug mode (set to true for troubleshooting)
OTEL_LOG_LEVEL=info